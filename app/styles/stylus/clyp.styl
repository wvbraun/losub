.clyp-logo-wrapper
  -ms-flex-negative: 0;
  flex-shrink: 0;
  margin: 0 10px;

.clyp-logo
  width: 98px;
  height: 44px;

.volume-button
  background-repeat: no-repeat;
  background-position: center;
  background-size: 100%;
  width: 37px;
  height: 64px;
  cursor: pointer;

.volume-slider-container
  background-color: #FDFFFC;
  box-shadow: 2px 2px 2px rgba(9, 12, 35, 0.1), -2px 2px 2px rgba(9, 12, 35, 0.1);
  display: none;
  height: 180px;
  position: absolute;
  width: 40px;
  margin-left: -2px;
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;

.volume-slider-positioning
  left: 0;
  margin-left: auto;
  margin-right: auto;
  position: absolute;
  right: 0;
  top: -7px;
  -ms-transform: rotate(90deg);
  transform: rotate(90deg);
  -ms-transform-origin: bottom left;
  transform-origin: bottom left;
  width: 16px;

.slider
  width: 148px;

  .dragger:hover:nth-child(1)
    background: #8C95A0;
    border: 1px solid #8C95A0;
    border-radius: 10px;
    height: 16px;
    width: 16px;

  .track:nth-child(1)
  .highlight-track:nth-child(1)
    background: #D1D6DA;
    border-radius: 8px;
    height: 6px;

.highlight-track:nth-child(1)
  background-color: #3DBEB3;
