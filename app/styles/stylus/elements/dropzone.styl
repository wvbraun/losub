
.dropzone
  width auto
  height auto
  border-width 2px
  border-style none

.upload-zone
  width 100%
  height 363px
  margin 20px 0 15px 0
  border-radius 4px
  display -ms-flexbox
  display flex
  -ms-flex-align center
  align-items center
  -ms-flex-pack center
  justify-content center
  -ms-flex-direction column
  flex-direction column
  background-color #E4E5E5
  cursor pointer
  &:hover .upload-icon
    background-size 100%
  &:hover .upload-text
    color #5F6D7A

.upload-input
  display none
  position fixed
  width 100vw
  height 100vh
  top 0
  left 0
  opacity 0
  z-index 10001

$fa-var-icon-upload = "\f01b"
.upload-icon
  fa(icon-upload)
  font-size 5em
  background-repeat no-repeat
  background-position center

.upload-text
  padding-top 10px
  width 142px
  color #8C95A0
  text-align center