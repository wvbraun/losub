  .fixed-header-bumper
    height: 64px;
  .fixed-header
    height: 64px;
    padding: 9px 10px;
  .header-menu
    width: 120px;
    top: 64px;
    &.notification-menu
      width: 290px;
      & a:hover
        background-color: #F1F3F3;
        border-bottom-left-radius: 4px;
        border-bottom-right-radius: 4px;
    & .header-notification-card:hover
    & a:hover
      background-color: #F3F4F4;
    &.is-open
      padding: 0;
  .tt-dropdown-menu
    width: calc(100% - 20px);
    margin-top: 12px;
  .remodal.user-account
    max-width: 420px;
  .remodal-error-inline
    top: 0;


@media screen and (min-width: 64em)
  .large-3
    width: 25%;
  .large-9
    width: 75%;

.small-12
  width: 100%;


@media screen and (min-width: 48em)
