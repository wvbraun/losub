.modal-bottom-element
  margin-bottom: 0;

.modal-button
  font-size: 1.2em;
  font-weight: 300;
  width: 100%;

.modal-checkbox
  position: relative;
  top: 1px;

.modal-checkbox-label
  float: left;
  font-size: 16px;

.upload-modal
  max-width: none;
  overflow: hidden;
  width: 100%;
  background-color: white;

.file-upload-box
  width: 100%;

.upload-zone
  width: 100%;
  height: 363px;
  margin: 20px 0 15px 0;
  border-radius: 4px;
  display: -ms-flexbox;
  display: flex;
  -ms-flex-align: center;
  align-items: center;
  -ms-flex-pack: center;
  justify-content: center;
  -ms-flex-direction: column;
  flex-direction: column;
  background-color: #E4E5E5;
  cursor: pointer;
  &:hover .upload-icon
    background-size: 100%;
  &:hover .upload-text
    color: #5F6D7A;

.upload-input
  display: none;
  position: fixed;
  width: 100vw;
  height: 100vh;
  top: 0;
  left: 0;
  opacity: 0;
  z-index: 10001;

$fa-var-icon-upload = "\f01b";
.upload-icon
  fa(icon-upload);
  font-size: 5em;
  background-repeat: no-repeat;
  background-position: center;

.upload-text
  padding-top 10px
  width 142px;
  color #8C95A0
  text-align center

.cancel-file-upload-button-container
  position: absolute;
  width: 100%;
  bottom: 50px;
  left: 0;

.cancel-file-upload-button
  cursor: pointer;
  display: inline;

.upload-processing-text
  position: absolute;
  font-style: italic;
  width: 100%;
  top: 50px;
  left: 0;

.upload-error-circle
  width: 120px;
  height: 120px;
  border-radius: 50%;
  border-style: solid;
  border-color: #E2665A;
  display: -ms-flexbox;
  display: flex;
  -ms-flex-align: center;
  align-items: center;
  -ms-flex-pack: center;
  justify-content: center;
  -ms-flex-direction: column;
  flex-direction: column;


.container-fluid
  padding: 0px;

@media (max-width: 797px)
    body
        padding-left: 0px;
        padding-right: 0px;

.source-tabs
  display: -ms-flexbox;
  display: flex;
  list-style: none;
  padding-left: 0;
  margin: 0;
  height: 40px;
  border-bottom: 1px solid #E4E5E5;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  & .tab
    height: 100%;
    min-width: 50%;
    padding: 4px 10px 0 10px;
    cursor: pointer;
    text-transform: uppercase;
    color: #8C95A0;
    &.is-active
      border-bottom: 4px solid #3DBEB3;
      color: #3DBEB3;
    &:not(.is-active):hover
      color: #5F6D7A;


.terms-clause
  font-size 13px
  text-align center
  width 100%
  position absolute
  bottom 2px
  & a
    color TEXT_COLOR
