@import './config'

.site-container
  min-height 100%
  margin 0 auto -80px

html
  font-size 100%
  box-sizing border-box
  position relative
  min-height 100%

footer
  position absolute
  bottom 0
  width 100%
  height 80px
  background-color clyp_cream
  display -ms-flexbox
  display flex
  font-size 13px
  color clyp_gray
  -ms-flex-direction column
  flex-direction column
  padding 14px 0

body
  padding 0
  margin-bottom 80px !important
  font-family "BrandonGrotesque", sans-serif !important
  font-weight normal
  line-height 1.5
  color clyp_dark
  background clyp_cream
  background-color light_gray !important
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

@media screen and (min-width 48em)
  footer
    -ms-flex-direction row
    flex-direction row
    -ms-flex-align center
    -ms-grid-row-align center
    align-items center
    padding 0 20px

  

.clyp-hero-wrapper
  position relative

.clyp-hero
  background-color clyp_dark
  width 100%
  display -ms-flexbox
  display flex
  -ms-flex-direction column
  flex-direction column
  -ms-flex-align center
  align-items center
  -ms-flex-pack center
  justify-content center
  color clyp_cream
  text-align center
  padding: 20px 10px;

@media screen and (min-width 48em)
  .clyp-hero
    padding 32px 20px

.terms-clause
  font-size 13px
  text-align center
  width 100%
  //position absolute
  bottom 2px
  & a
    color clyp_green