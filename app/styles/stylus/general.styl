.site-container
  min-height: 100%;
  height: auto !important;
  margin: 0;
  margin-bottom: -80px;

header
  height: 54px;
  width: 100%;
  position: relative;
  z-index: 10;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;

.fixed-elements
  position: fixed;
  width: 100%;
  z-index: 10;
  -webkit-transform: translateZ(0);

.fixed-header
  height: 54px;
  position: fixed;
  -webkit-transform: translateZ(0);
  padding: 4px 0;
  display: -ms-flexbox;
  display: flex;
  -ms-flex-align: center;
  align-items: center;
  -ms-flex-pack: justify;
  justify-content: space-between;
  background-color: #FDFFFC;
  width: 100%;
  box-shadow: 0 2px 2px rgba(9, 12, 35, 0.1);
  z-index: 10;

.fixed-header .notifications-nav-action-small
  position: relative;
  left: 21px;

.fixed-header-bumper
  height: 54px;


.fixed-banner-wrapper
  height: 48px;

.fixed-banner
  background-color: #3DBEB3;
  height: 48px;
  padding: 0;
  position: fixed;
  -webkit-transform: translateZ(0);
  text-align: center;
  width: 100%;
  z-index: 9;

.fixed-banner-text
  color: #FDFFFC;
  display: inline;
  font-weight: 400;
  height: 48px;
  line-height: 48px;
  margin-bottom: 0;
  margin-top: 0;
  padding-bottom: 0;

.nav-action
  margin-right: 20px;
  letter-spacing: 0.01em;

.nav-action:last-child
.nav-action.login
  margin-right: 0;

.nav-actions
  display: -ms-flexbox;
  display: flex;
  -ms-flex-align: center;
  align-items: center;
  position: relative;
  margin-left: auto;


/**
   * Remove border when inside `a` element in IE 8/9/10.
   */

img
  border: 0;

/**
   * Correct overflow not hidden in IE 9/10/11.
   */
svg:not(:root)
  overflow: hidden;

img
  max-width: 100%;
  height: auto;
  -ms-interpolation-mode: bicubic;
  display: inline-block;
  vertical-align: middle;

vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  {prop} args

box-sizing()
  vendor('box-sizing', arguments)
*
  box-sizing inherit;


@media screen and (min-width: 48em)
  header
  .fixed-header-bumper
    height: 64px;
  .fixed-header
    height: 64px;
    padding: 9px 10px;
  .header-menu
    width: 120px;
    top: 64px;
    &.notification-menu
      width: 290px;
      & a:hover
        background-color: #F1F3F3;
        border-bottom-left-radius: 4px;
        border-bottom-right-radius: 4px;
    & .header-notification-card:hover
    & a:hover
      background-color: #F3F4F4;
    &.is-open
      padding: 0;
  .tt-dropdown-menu 
    width: calc(100% - 20px);
    margin-top: 12px;
  .remodal.user-account
    max-width: 420px;
  .remodal-error-inline
    top: 0;
