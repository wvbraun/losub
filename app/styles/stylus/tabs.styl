BG_COLOR = #FDFFFC;
TABS_COLOR = #8C95A0;
TABS_ACTIVE_COLOR = #3DBEB3;
TABS_INACTIVE_COLOR = #5F6D7A;

.react-tabs
  background-color BG_COLOR
  position relative
  box-shadow 0 2px 2px rgba(9, 12, 35, 0.1)
  & .react-tab
    width 100%
    margin 20px 0
    position relative
    overflow hidden
  & .header
    display -ms-flexbox
    display flex
    max-width 110rem
    width 100%
    margin 0px 170px 0px 170px
  & a
    color TABS_COLOR
    display inline-block
    height 54px
    &:hover
      color TABS_INACTIVE_COLOR
      text-decoration none
  & .selected a
    color TABS_ACTIVE_COLOR
    border-bottom 4px solid TABS_ACTIVE_COLOR

  & ul
    list-style none
    margin 0
    width 100%
    -webkit-padding-start: 0px;
    & li
      display inline
      line-height 54px
      padding 0 10px
      min-width 33%
      text-align center
      cursor pointer
      text-transform uppercase
      -webkit-user-select none
      -moz-user-select none
      -ms-user-select none
      user-select none

@media screen and (min-width: 48em)
  .react-tabs
    & .header
      padding-left 15px
      padding-right 15px

@media only screen and (min-width: 1024px)
  .react-tabs
    & .react-tab
      margin 20px 20px 20px 0


